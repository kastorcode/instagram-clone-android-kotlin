<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginVertical="6dp"
    android:layout_marginHorizontal="5dp"
    app:cardElevation="5dp"
>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingHorizontal="5dp"
        android:paddingTop="5dp"
        android:paddingBottom="6dp"
        android:orientation="vertical"
    >
        <LinearLayout
            android:id="@+id/posts_linear_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginBottom="5dp"
        >
            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/posts_profile_image"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:layout_marginRight="5dp"
                android:src="@drawable/profile"
            />

            <TextView
                android:id="@+id/posts_username"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="username"
                android:textSize="16sp"
                android:textStyle="bold"
                android:layout_marginRight="5dp"
                android:layout_marginTop="15dp"
                android:textColor="@color/colorPrimaryDark"
            />
        </LinearLayout>

        <ImageView
            android:id="@+id/posts_image_view"
            android:layout_width="match_parent"
            android:layout_height="220dp"
            android:layout_marginBottom="5dp"
            android:scaleType="centerCrop"
            android:src="@drawable/profile"
        />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
        >
            <ImageView
                android:id="@+id/posts_like_btn"
                android:layout_width="41dp"
                android:layout_height="40dp"
                android:layout_marginRight="6dp"
                android:src="@drawable/heart_not_clicked"
            />

            <ImageView
                android:id="@+id/posts_comment_btn"
                android:layout_width="40dp"
                android:layout_height="34dp"
                android:layout_marginRight="6dp"
                android:layout_marginTop="4dp"
                android:layout_toEndOf="@+id/posts_like_btn"
                android:src="@drawable/comment"
            />

            <ImageView
                android:id="@+id/posts_save_btn"
                android:layout_width="40dp"
                android:layout_height="39dp"
                android:layout_alignParentEnd="true"
                android:src="@drawable/save_unfilled_large_icon"
            />
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
        >
            <TextView
                android:id="@+id/posts_likes"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="6dp"
                android:textStyle="bold"
                android:textSize="15dp"
                android:textColor="@color/colorPrimaryDark"
                android:text="likes"
            />

            <TextView
                android:id="@+id/posts_comments"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toEndOf="@+id/posts_likes"
                android:layout_marginRight="6dp"
                android:textStyle="bold"
                android:textSize="15dp"
                android:textColor="@color/colorPrimaryDark"
                android:text="comments"
            />
        </RelativeLayout>

        <TextView
            android:id="@+id/posts_publisher"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textStyle="bold"
            android:textSize="15dp"
            android:textColor="@color/colorPrimaryDark"
        />

        <TextView
            android:id="@+id/posts_description"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="15dp"
            android:textColor="@color/colorPrimary"
        />
    </LinearLayout>
</androidx.cardview.widget.CardView>