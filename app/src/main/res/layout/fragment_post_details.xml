<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".fragments.PostDetailsFragment"
>
    <com.google.android.material.appbar.AppBarLayout
        android:id="@+id/post_details_app_bar_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@android:color/white"
    >
        <androidx.appcompat.widget.Toolbar
            android:id="@+id/post_details_toolbar"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_margin="4dp"
            android:background="@android:color/white"
        >
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
            >
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:textSize="18sp"
                    android:maxLines="1"
                    android:textStyle="bold"
                    android:textColor="@android:color/black"
                    android:text="Photo"
                />
            </RelativeLayout>
        </androidx.appcompat.widget.Toolbar>
    </com.google.android.material.appbar.AppBarLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/post_details_app_bar_layout"
        android:layout_margin="5dp"
    >
        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/post_details_recycler_view"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="20dp"
        />

        <Button
            android:id="@+id/post_details_delete_btn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/post_details_recycler_view"
            android:layout_alignParentEnd="true"
            android:layout_marginBottom="20dp"
            android:paddingHorizontal="15dp"
            android:paddingVertical="7.5dp"
            android:background="@color/colorPrimary"
            android:textAllCaps="true"
            android:textSize="17sp"
            android:textColor="@android:color/white"
            android:text="Delete"
            android:visibility="gone"
        />
    </RelativeLayout>
</RelativeLayout>