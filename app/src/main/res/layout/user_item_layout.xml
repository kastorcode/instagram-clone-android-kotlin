<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_centerHorizontal="true"
    android:layout_marginTop="10dp"
    android:layout_marginHorizontal="100dp"
    android:padding="5dp"
    android:background="@drawable/button_black_background"
>
    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:layout_margin="2.5dp"
    >
        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/user_item_image"
            android:layout_width="120dp"
            android:layout_height="120dp"
            android:layout_centerHorizontal="true"
            android:src="@drawable/profile"
        />

        <TextView
            android:id="@+id/user_item_username"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/user_item_image"
            android:layout_marginTop="2.5dp"
            android:gravity="center"
            android:textSize="16dp"
            android:textColor="@color/colorPrimary"
            android:text="username"
        />

        <TextView
            android:id="@+id/user_item_fullname"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/user_item_username"
            android:layout_marginTop="2.5dp"
            android:gravity="center"
            android:textSize="16dp"
            android:textStyle="bold"
            android:textColor="@color/colorPrimary"
            android:text="fullname"
        />

        <Button
            android:id="@+id/user_item_follow_btn"
            android:layout_width="100dp"
            android:layout_height="40dp"
            android:layout_below="@+id/user_item_fullname"
            android:layout_centerHorizontal="true"
            android:layout_margin="2.5dp"
            android:background="@drawable/button_black_background"
            android:text="Follow"
        />
    </RelativeLayout>
</RelativeLayout>